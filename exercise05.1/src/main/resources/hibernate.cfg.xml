<?xml version="1.0" encoding="windows-1252" ?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
        <!-- MySQL DB running on localhost -->
        <property name="connection.url">jdbc:mysql://localhost/cs544</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<!-- Use the Hibernate built-in pool for tests. -->
		<property name="connection.pool_size">1</property>

		<!-- Show all SQL DML executed by Hibernate -->
		<property name="show_sql">true</property>
		<property name="use_sql_comments">true</property>
		<property name="hibernate.format_sql">faLse</property>
		<!-- Always drop and recreate the database schema on startup -->
		<property name="hbm2ddl.auto">create</property>

		<!-- Mapping files -->
		<mapping class="models.Product" />
		<mapping class="models.Order" />
		<mapping class="models.Customer" />
		<mapping class="models.OrderLine" />
		<mapping class="models.CD" />
		<mapping class="models.DVD" />
		<mapping class="models.Book" />
	</session-factory>
</hibernate-configuration>
